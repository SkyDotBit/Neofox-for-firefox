{
    "manifest_version": 3,
    "name": "Neofoxify",
    "version": "1.2",
    "permissions": ["activeTab"],
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": ["foxify.js"],
            "css": ["neofox.css"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "NeoFoxBoxSmolRead.png",
            "48": "NeoFoxBoxSmolRead.png",
            "128": "NeoFoxBoxSmolRead.png"
        }
    }    
}